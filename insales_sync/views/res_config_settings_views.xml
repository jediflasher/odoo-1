<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.insales.sync</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='integration']" position="inside">
        <div class="col-xs-12 col-md-6 o_setting_box" id="oauth">
          <div class="o_setting_left_pane">
            <field name="module_insales_sync"/>
          </div>
          <div class="o_setting_right_pane" name="insales_sync_right_pane">
            <label string="InSales Synchronization" for="insales_sync"/>
            <div class="text-muted">Synchronize with InSales</div>
            <div class="content-group">
              <button
                  name="insales_sync.insales_sync_config_action"
                  class="btn-link"
                  icon="fa-arrow-right"
                  type="action"
                  string="InSales Configurations"/>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
